<%= form_for @request, url: admin_reject_request_path, method: :patch do |f| %>
  <%= render "shared/error_messages" %>
  <%= f.label :reject_reason, t("request.reject_reason"), class: "block mb-2 text-sm font-medium text-white dark:text-white" %>
  <%= f.text_field :reject_reason, placeholder: t("request.reject_reason_placeholder"), class: "text-black mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  <%= f.submit t("request.confirm"), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %>
<% end %>
