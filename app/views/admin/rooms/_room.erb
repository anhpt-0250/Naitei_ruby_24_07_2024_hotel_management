<li class="bg-white shadow-md rounded-lg p-4 flex items-center space-x-4 hover:bg-gray-100 transition duration-300">
<%= image_tag "logo.jpg", alt: "Room Image", class: "h-16 w-auto rounded-md" %>
<div class="flex-grow">
  <%= link_to room.room_number, admin_room_path(room), class: "text-lg font-semibold text-blue-600 hover:text-blue-800 block" %>
  <p class="text-sm text-gray-600">
  <%= room.description %>
  </p>
</div>
<%= link_to admin_room_path(room), class: "text-gray-500 hover:text-gray-700 flex items-center space-x-2" do %>
  <i class="fa fa-arrow-right text-black text-lg"></i>
<% end %>
</li>
