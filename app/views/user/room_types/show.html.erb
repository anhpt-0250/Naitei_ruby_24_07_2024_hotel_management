<div class="flex items-center space-x-4">
  <div class="w-1/3">
    <%= image_tag "logo.jpg", alt: "Room Image", class: "w-auto rounded-md" %>
  </div>
  <div class="w-2/3 bg-gray-800 text-white p-4 rounded-md ml-6 mt-6">
    <p class="text-lg font-semibold mb-2"><%= @room_type.name %></p>
    <p class="text-sm mb-2">
      <%= @room_type.price_weekday %> - <%= @room_type.price_weekend %> <%= t "rooms.currencies" %>
    </p>
    <p class="text-sm mb-2"><%= t "rooms.area" %> <%= @room_type.area %> <%= t "rooms.units" %></p>
    <p class="text-sm mb-4"><%= t "rooms.guest" %> <%= @room_type.number_of_guest_max %></p>
    <% if can? :create, Request %>
      <%= link_to t("rooms.booking"), "#", id: "booking-button", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <% else %>
      <p class="text-red-500 font-bold mb-4"><%= t "must_user" %></p>
      <%= link_to t("log_in?"), new_user_session_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %><br />
    <% end %>

    <div id="booking-form" class="hidden mt-4 p-4 bg-white rounded-md">
      <%= render "user/requests/form" %>
    </div>
  </div>
</div>
<div class="flex items-center space-x-4">
  <div class="w-2/3 p-4 rounded-md ml-auto mt-6">
    <ul class="reviews space-y-4">
      <%= render @reviews %>
    </ul>
  </div>
</div>
