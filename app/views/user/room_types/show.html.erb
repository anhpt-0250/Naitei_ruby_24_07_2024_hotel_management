<div class="flex items-center space-x-4">
  <div class="w-1/3">
    <%= image_tag "logo.jpg", alt: "Room Image", class: "w-auto rounded-md" %>
  </div>
  <div class="w-2/3 bg-gray-800 text-white p-4 rounded-md ml-6 mt-6">
    <p class="text-lg font-semibold mb-2"><%= @room_type.name %></p>
    <p class="text-sm mb-2">
      <%= @room_type.price_weekday %> - <%= @room_type.price_weekend %> <%= t "rooms.currencies" %>
    </p>
    <p class="text-sm mb-2"><%= t "rooms.area" %> <%= @room_type.area %> <%= t "rooms.units" %></p>
    <p class="text-sm mb-4"><%= t "rooms.guest" %> <%= @room_type.number_of_guest_max %></p>
    <%= link_to t("rooms.booking"), root_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
