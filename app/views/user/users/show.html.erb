<div class="flex w-full">
  <div>
    <p><%= t "signed_in" %> <%= current_user.sign_in_count %> <%= t "times" %></p>
    <p><%= t "time_sign_in_recent" %> <%= current_user.last_sign_in_at %></p>
</div>
  <div class="flex flex-col w-2/3 ml-auto mr-16">
    <h1 class="text-3xl font-bold mb-6 text-center"><%= t "list_request" %></h1>
     <% if @requests.any? %>
      <ul class="requests grid grid-cols-1 gap-4 w-full">
        <%= render @requests %>
      </ul>
      <%== pagy_nav(@pagy) %>
    <% else %>
      <p class="text-center text-gray-600"><%= t "no_requests_found" %></p>
    <% end %>
  </div>
</div>
